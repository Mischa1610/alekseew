{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@env/*": ["src/environments/*"],
      "@app/*": ["src/app/*"],
      "@core/*": ["src/app/core/*"],
      "@header/*": ["src/app/core/header/*"],
      "@navigation/*": ["src/app/core/navigation/*"],
      "@sidebar/*": ["src/app/core/sidebar/*"],
      "@footer/*": ["src/app/core/footer/*"],
      "@main/*": ["src/app/main/*"]
    }
  },
  "include": ["**/*.ts"]
}
